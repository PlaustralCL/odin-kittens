<p style="color: green"><%= notice %></p>

<h1>Kittens</h1>

<div id="kittens">
  <% @kittens.each do |kitten| %>
    <p>
      <%= link_to kitten.name, kitten %>
      <%= link_to fa_icon("trash"), @kitten, method: :delete %>
    </p>
  <% end %>
</div>

<%= button_to "New kitten", new_kitten_path %>
